extends layout.pug

block content
  .container(style="padding: 20px;")
    // Logo section
    .logo(style="text-align: center; margin-bottom: 20px;")
      img(src="/images/MainLogo.png", alt="MC Recipe Swap Logo", style="width: 200px; height: 220px;")

    // Search Bar Section
    .search-bar(style="text-align: center; margin-bottom: 20px;")
      h2 Search for a Recipe by ID
      form(action="/recipes/search/results", method="get") 
        input(type="text", name="id", placeholder="Enter Recipe ID", required)
        button(type="submit") Search

    // Display messages if applicable
    if message
      p(style="color: red; text-align: center;")= message

    // Display Recipe if Found
    if recipe
      .recipe-detail(style="text-align: center; margin-top: 20px;")
        h3= recipe.title
        img(src=recipe.image_url, alt=recipe.title, style="width: 100%; height: 300px; object-fit: cover;")
        p Description: #{recipe.description}
        h4 Ingredients:
        ul
          each ingredient in recipe.ingredients
            li #{ingredient.quantity} #{ingredient.unit} of #{ingredient.name}
        h4 Instructions:
        p #{recipe.instructions}
    else
      p No recipe found with the provided ID.
