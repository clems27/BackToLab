extends layout.pug

block content
  .container(style="padding: 20px;")
    .search-bar(style="text-align: center; margin-bottom: 20px;")
      h2 Search for a Recipe by ID
      form(action="/recipes/search/results" method="get")
        input(type="text" name="id" placeholder="Enter Recipe ID" required style="margin-right: 10px;")
        button(type="submit") Search

    if message
      p(style="color: red;")= message

    if recipe
      .recipe-detail
        h3= recipe.title
        img(src=recipe.image_url, alt=recipe.title, style="width: 100%; height: 300px; object-fit: cover;")
        p Description: #{recipe.instructions}
        p Ingredients: #{recipe.ingredients}
        p Instructions: #{recipe.instructions}
        p Prep Time: #{recipe.prep_duration}
        p Cook Time: #{recipe.cook_duration}
        p Meal Category: #{recipe.meal_category}
        p Skill Level: #{recipe.skill_level}
    else
      p Recipe not found.
