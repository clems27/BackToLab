extends layout.pug

block content
  header
    h1 Search for a Recipe
  main
    section
      label(for="search-recipe") Search Recipe:
      input#search-recipe(type="text", placeholder="Enter recipe name")
      button(onclick="searchRecipe()") Search
    section#edit-section(style="display: none;")
      label(for="recipe-name") Recipe Name:
      input#recipe-name(type="text")
      
      label(for="country-origin") Country of Origin:
      input#country-origin(type="text")
      
      label(for="ingredients") Ingredients:
      textarea#ingredients
      
      label(for="method") Method:
      textarea#method
      
      label(for="prep-duration") Preparation Duration (min):
      input#prep-duration(type="number")
      
      label(for="cook-duration") Cooking Duration (min):
      input#cook-duration(type="number")
      
      button(onclick="saveChanges()") Save Changes
      button(onclick="deleteRecipe()") Delete Recipe
  script.
    function searchRecipe() {
      document.getElementById('edit-section').style.display = 'block';
    }
    function saveChanges() {
      alert("Recipe changes saved successfully!");
    }
    function deleteRecipe() {
      if (confirm("Are you sure you want to delete this recipe?")) {
        alert("Recipe deleted.");
      }
    }
